{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@app": ["src/app"],
      "@app/*": ["src/app/*"],
      "@entities": ["src/entities"],
      "@entities/*": ["src/entities/*"],
      "@features": ["src/features"],
      "@features/*": ["src/features/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@widgets": ["src/widgets"],
      "@widgets/*": ["src/widgets/*"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["vite.config.ts"]
}
